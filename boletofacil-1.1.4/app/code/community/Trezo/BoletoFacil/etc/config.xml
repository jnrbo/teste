<?xml version="1.0"?>
<config>
    <modules>
        <Trezo_BoletoFacil>
            <version>1.1.3</version>
        </Trezo_BoletoFacil>
    </modules>
    <global>
        <blocks>
            <boletofacil>
                <class>Trezo_BoletoFacil_Block</class>
            </boletofacil>
        </blocks>
        <models>
            <boletofacil>
                <class>Trezo_BoletoFacil_Model</class>
                <resourceModel>boletofacil_mysql4</resourceModel>
            </boletofacil>
            <boletofacil_mysql4>
                <class>Trezo_BoletoFacil_Model_Mysql4</class>
                <entities>
                    <boleto>
                        <table>trezo_boleto</table>
                    </boleto>
                </entities>
            </boletofacil_mysql4>
        </models>
        <resources>
            <boletofacil_setup>
                <setup>
                    <module>Trezo_BoletoFacil</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </boletofacil_setup>
            <boletofacil_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </boletofacil_write>
            <boletofacil_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </boletofacil_read>
        </resources>
        <helpers>
            <boletofacil>
                <class>Trezo_BoletoFacil_Helper</class>
            </boletofacil>
        </helpers>
    </global>
    <frontend>
        <routers>
            <boletofacil>
                <use>standard</use>
                <args>
                    <module>Trezo_BoletoFacil</module>
                    <frontName>boletofacil</frontName>
                </args>
            </boletofacil>
        </routers>
        <layout>
            <updates>
                <boletofacil>
                    <file>trezo_boletofacil.xml</file>
                </boletofacil>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Trezo_BoletoFacil before="Mage_Adminhtml">Trezo_BoletoFacil_Adminhtml</Trezo_BoletoFacil>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <boletofacil>
                    <file>trezo_boletofacil.xml</file>
                </boletofacil>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <payment>
            <trezo_boletofacil>
                <model>boletofacil/boletofacilMethod</model>
                <order_status>pending</order_status>
                <order_paid_status>processing</order_paid_status>
                <active>1</active>
                <test>0</test>
                <title>Boleto FÃ¡cil</title>
                <due_date>3</due_date>
                <installments>1</installments>
                <max_overdue_days>0</max_overdue_days>
                <fine>0</fine>
                <interest>0</interest>
                <notify_payer>1</notify_payer>
            </trezo_boletofacil>
        </payment>
    </default>
    <crontab>
        <jobs>
            <boletofacil>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>boletofacil/cron::verificaBoletoPago</model>
                </run>
            </boletofacil>
        </jobs>
    </crontab>
</config> 
